@model ImageCloud.Models.ImageViewModel

@{
    ViewBag.Title = "Delete";
}



<h3>Are you sure you want to delete this image?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageDate)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>

        <dd>
            <img src=@Url.Content(Model.Picture) class="img-thumbnail">
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="btn-group">
                <input type="submit" value="Delete" class="btn btn-dark" />
                @Html.ActionLink("Back to List", "Index", new { controller = "Image" }, new { @class = "btn btn-info" })
            </div>
            
        </div>
    }
</div>
