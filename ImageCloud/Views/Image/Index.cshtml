@model IEnumerable<ImageCloud.Models.ImageViewModel>

@{
    ViewBag.Title = "Image List";
}
@using ImageCloud.Variables;

@if (Variables.CurrentUser != null)
{
    <h2>Images</h2>
    <h3>
        @Html.ActionLink("Create New", "UploadImage")
    </h3>
    
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageDate)
            </th>
            @if (Variables.CurrentUser.UserRole == "Admin")
            {
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
            }

            <th>
                @Html.DisplayName("__")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageDate)
                </td>
                @if (Variables.CurrentUser.UserRole == "Admin")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                }
                <td>
                    <img src=@Url.Content(item.Picture) class="img-thumbnail" width="50" height="50" />
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
          
        }

    </table>
}
else
{
   <h3>Приветствуем вас в новом сервисе ImageCloud</h3>
   <h4>Чтобы воспользоваться сервисом необходимо Зарегистрироваться или Войти в Аккаунт</h4>
}