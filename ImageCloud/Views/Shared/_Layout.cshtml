<!DOCTYPE html>
@using ImageCloud.Variables;
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-info fixed-top">
        <div class="container " style="margin-right:44%">
            <div class="nav-item ">
                <a class="nav-link py-0" href="/Image/Index/" style="color:azure">ImageCloud</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="container">
            <div class="collapse navbar-collapse " id="navbarText">
                <ul class="navbar-nav mr-auto">


                    @if (Variables.CurrentUser != null)
                    {
                        <li class="nav-item  ">
                            <a class="nav-link py-0" style="color:azure" href="/User/SignOut/">Sign Out</a>
                        </li>
                        if (Variables.CurrentUser.UserRole == "Admin")
                        {
                            <li class="nav-item ">
                                <a class="nav-link py-0" style="color:azure" href="/User/Index/">Users</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item ">
                            <a class="nav-link py-0" style="color:azure" href="/User/SignIn/">Sign In</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link py-0" style="color:azure" href="/User/CreateUser/">Registration</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="height:50%">
            <p class="fixed-bottom">&copy; @DateTime.Now.Year – Creator Rabeshko A.V.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
